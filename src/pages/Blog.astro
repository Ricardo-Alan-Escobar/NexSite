            <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
            <polyline points="16 6 12 2 8 6"></polyline>
            <line x1="12" y1="2" x2="12" y2="15"></line>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Cabecera del artículo -->
  <header class="relative">
    <div class="absolute inset-0 bg-gradient-to-b from-blue-900/20 to-gray-950 z-0"></div>
    <div class="container mx-auto px-4 pt-12 pb-8 relative z-10">
      <div class="max-w-4xl mx-auto">
        <span class="inline-block px-3 py-1 text-xs font-bold rounded-full bg-blue-600 text-white mb-4">
          {article.category}
        </span>
        <h1 class="text-3xl md:text-5xl font-bold mb-6 leading-tight text-white">
          {article.title}
        </h1>
        
        <div class="flex flex-wrap items-center gap-6 mb-8">
          <div class="flex items-center gap-3">
            <div class="h-12 w-12 rounded-full border-2 border-blue-600 overflow-hidden">
              <Image 
                src={authorAvatar || "/placeholder.svg"} 
                alt={article.author.name} 
                width={48} 
                height={48} 
                class="w-full h-full object-cover"
              />
