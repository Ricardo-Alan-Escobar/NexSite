        </div>
      </div>
      
      <!-- Información del autor -->
      <div class="mt-10 bg-gray-900/50 border border-gray-800 rounded-xl p-6">
        <div class="flex flex-col sm:flex-row gap-4 items-center sm:items-start">
          <div class="h-20 w-20 rounded-full border-2 border-blue-600 overflow-hidden">
            <Image 
              src={authorAvatar || "/placeholder.svg"} 
              alt={article.author.name} 
              width={80} 
              height={80} 
              class="w-full h-full object-cover"
            />
          </div>
          <div>
            <h3 class="text-xl font-bold mb-2 text-white">{article.author.name}</h3>
            <p class="text-gray-400 mb-3">{article.author.role}</p>
            <p class="text-gray-300">{article.author.bio}</p>
            <div class="mt-4">
