<style>
  /* Animación de entrada general */
  .fade-in {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .fade-in.show {
    opacity: 1;
    transform: translateY(0);
  }

  /* Animación para el título */
  .title-animate {
    opacity: 0;
    transform: scale(0.8);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .title-animate.show {
    opacity: 1;
    transform: scale(1);
  }

  /* Animación para el subtítulo */
  .subtitle-animate {
    opacity: 0;
    transform: translateX(-50px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .subtitle-animate.show {
    opacity: 1;
    transform: translateX(0);
  }

  /* Efecto hover en los botones */
  .btn-hover:hover {
    transform: scale(1.1);
    transition: transform 0.3s ease-in-out;
  }
  
  /* Efecto de desvanecido azul */
  .blue-fade-bg {
    background: linear-gradient(135deg, rgba(219, 234, 254, 0.8) 0%, rgba(255, 255, 255, 0.9) 50%, rgba(239, 246, 255, 0.7) 100%);
  }
</style>

<section id="Contactanos" class="w-full py-12 md:py-24 lg:py-32 bg-white fade-in relative overflow-hidden">
  <!-- Fondo con gradiente azul sutil -->
