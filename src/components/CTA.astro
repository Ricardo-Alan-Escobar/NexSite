<style>
  /* Animación de entrada general */
  .fade-in {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .fade-in.show {
    opacity: 1;
    transform: translateY(0);
  }

  /* Animación para el título */
  .title-animate {
    opacity: 0;
    transform: scale(0.8);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .title-animate.show {
    opacity: 1;
    transform: scale(1);
  }

  /* Animación para el subtítulo */
  .subtitle-animate {
    opacity: 0;
    transform: translateX(-50px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .subtitle-animate.show {
    opacity: 1;
    transform: translateX(0);
  }

  /* Efecto hover en los botones */
  .btn-hover:hover {
    transform: scale(1.1);
    transition: transform 0.3s ease-in-out;
  }
  
  /* Efecto de desvanecido azul */
  .blue-fade-bg {
    background: linear-gradient(135deg, rgba(219, 234, 254, 0.8) 0%, rgba(255, 255, 255, 0.9) 50%, rgba(239, 246, 255, 0.7) 100%);
  }
</style>

<section id="Contactanos" class="w-full py-12 md:py-24 lg:py-32 bg-white fade-in relative overflow-hidden">
  <!-- Fondo con gradiente azul sutil -->
  <div class="absolute inset-0 blue-fade-bg"></div>
  
  <!-- Efectos de iluminación azules más intensos -->
  <div class="absolute -top-20 left-1/4 w-96 h-96 bg-blue-300/50 rounded-full blur-3xl"></div>
  <div class="absolute -bottom-20 right-1/4 w-96 h-96 bg-blue-200/50 rounded-full blur-3xl"></div>
  
  <!-- Efectos adicionales de desvanecido azul -->
  <div class="absolute top-1/3 right-1/3 w-64 h-64 bg-blue-400/30 rounded-full blur-3xl"></div>
  <div class="absolute bottom-1/3 left-1/3 w-64 h-64 bg-indigo-300/30 rounded-full blur-3xl"></div>
  
  <div class="container mx-auto px-4 md:px-6 relative z-10">
    <div class="flex flex-col items-center space-y-8 text-center">
      <!-- Elemento decorativo superior -->
      <div class="h-1 w-24 bg-gradient-to-r from-blue-500/0 via-blue-500 to-blue-500/0 rounded-full"></div>
      
      <div class="space-y-4 max-w-3xl">
        <div class="inline-block rounded-lg bg-blue-100/80 px-3 py-1 text-sm text-blue-600 mb-2 border border-blue-200 backdrop-blur-sm">
          Contáctanos
        </div>
        
        <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl title-animate">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-700 to-blue-400">
            ¿Listo para transformar tu idea?
          </span>
        </h2>
        
        <p class="mx-auto max-w-[700px] text-gray-700 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed subtitle-animate">
          Colaboremos para darle vida a tu visión con tecnología de vanguardia.
        </p>
      </div>

      <form name="contacto" method="POST" data-netlify="true" class="bg-white shadow-lg rounded-lg p-6 w-full max-w-lg space-y-4">
        <input type="hidden" name="form-name" value="contacto">
        <div>
          <label for="name" class="block text-sm text-start font-medium text-gray-700">Nombre</label>
          <input type="text" name="name" id="name" placeholder="Ingresa tu nombre completo" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:ring-blue-500 focus:border-blue-500">
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 text-start">Correo Electrónico</label>
          <input type="email" name="email" id="email" placeholder="Ingresa tu correo electronico" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:ring-blue-500 focus:border-blue-500">
        </div>

        <div>
          <label for="service" class="block text-sm font-medium text-gray-700 text-start">Servicio requerido</label>
          <select name="service" id="service" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:ring-blue-500 focus:border-blue-500">
            <option value="Desarrollo de Software">Desarrollo de Software</option>
            <option value="Instalación de Cámaras">Instalación de Cámaras</option>
            <option value="Marketing Digital">Marketing Digital</option>
          </select>
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-gray-700 text-start">Cuéntanos tu idea</label>
          <textarea name="message" id="message" rows="4" placeholder="Detalla los requisitos de tu proyecto para asesorarte mejor." required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:ring-blue-500 focus:border-blue-500"></textarea>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white font-medium py-2 px-4 rounded-md cursor-pointer hover:bg-blue-700 transition-all duration-300 btn-hover">
          Enviar Mensaje
        </button>
      </form>
      
      <!-- Elemento decorativo inferior -->
      <div class="mt-8">
        <div class="h-1 w-24 bg-gradient-to-r from-blue-500/0 via-blue-500 to-blue-500/0 rounded-full"></div>
      </div>
    </div>
  </div>
  
  <!-- Círculos decorativos adicionales con tonos azules -->
  <div class="absolute top-1/4 right-10 w-20 h-20 bg-blue-200 rounded-full opacity-60"></div>
  <div class="absolute bottom-1/4 left-10 w-16 h-16 bg-blue-300 rounded-full opacity-60"></div>
  <div class="absolute top-3/4 right-1/4 w-12 h-12 bg-blue-100 rounded-full opacity-70"></div>
  <div class="absolute top-1/3 left-1/5 w-8 h-8 bg-blue-400 rounded-full opacity-40"></div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const section = document.querySelector("#Contactanos");
    const title = document.querySelector(".title-animate");
    const subtitle = document.querySelector(".subtitle-animate");

    if (section && title && subtitle) {
      const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            section.classList.add("show");
            title.classList.add("show");
            subtitle.classList.add("show");
          }
        });
      }, { threshold: 0.3 });

      observer.observe(section);
    }
  });
</script>

