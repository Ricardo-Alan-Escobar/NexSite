<style>
  /* Animación de entrada general */
  .fade-in {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .fade-in.show {
    opacity: 1;
    transform: translateY(0);
  }

  /* Animación para el título */
  .title-animate {
    opacity: 0;
    transform: scale(0.8);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .title-animate.show {
    opacity: 1;
    transform: scale(1);
  }

  /* Animación para el subtítulo */
  .subtitle-animate {
    opacity: 0;
    transform: translateX(-50px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .subtitle-animate.show {
    opacity: 1;
    transform: translateX(0);
  }

  /* Efecto hover en los botones */
  .btn-hover:hover {
    transform: scale(1.1);
    transition: transform 0.3s ease-in-out;
  }
</style>

<section id="Contactanos" class="w-full py-12 md:py-24 lg:py-32 bg-white fade-in">
  <div class="container mx-auto px-4 md:px-6">
    <div class="flex flex-col items-center space-y-4 text-center">
      <div class="space-y-2">
        <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl title-animate">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-700 to-blue-400">
            ¿Listo para transformar tu idea?
          </span>
        </h2>
        <p class="mx-auto max-w-[700px] text-gray-800 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed subtitle-animate">
          Colaboremos para darle vida a tu visión con tecnología de vanguardia.
        </p>
      </div>

      <div class="flex">
        <a href="https://api.whatsapp.com/send?phone=5214445583374&text=Buen%20d%C3%ADa%2C%20%C2%BFMe%20podr%C3%ADa%20dar%20m%C3%A1s%20informaci%C3%B3n%3F%20" 
          class="inline-flex mx-2 items-center bg-green-500 justify-center rounded-md px-4 py-2 text-sm font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 btn-hover">
          Contáctanos vía WhatsApp
        </a>
        <a href="mailto:info.nexsite@gmail.com" 
          class="inline-flex mx-2 items-center justify-center rounded-md bg-red-500 px-4 py-2 text-sm font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 btn-hover">
          Contáctanos por Correo 
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const section = document.querySelector("#Contactanos");
    const title = document.querySelector(".title-animate");
    const subtitle = document.querySelector(".subtitle-animate");

    if (section && title && subtitle) {
      const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            section.classList.add("show");
            title.classList.add("show");
            subtitle.classList.add("show");
          }
        });
      }, { threshold: 0.3 });

      observer.observe(section);
    }
  });
</script>
