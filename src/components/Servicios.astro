---
const services = [
  { icon: "laptop", title: "Desarrollo Web", description: "Creamos aplicaciones web dinámicas y responsivas con las últimas tecnologías. Desde sitios informativos hasta plataformas avanzadas, ofrecemos soluciones que generan impacto." },
  { icon: "camera", title: "Instalación de Cámaras de Seguridad", description: "Ofrecemos instalación profesional de sistemas de videovigilancia, asegurando la protección de hogares y negocios con tecnología de punta." },
  { icon: "megaphone", title: "Agencia de Marketing Digital", description: "Impulsamos tu marca con estrategias efectivas de marketing digital, incluyendo SEO, publicidad en redes sociales y gestión de contenido." },
  { icon: "smartphone", title: "Desarrollo Móvil", description: "Diseñamos aplicaciones nativas y multiplataforma para iOS y Android, brindando experiencias de usuario fluidas y optimizadas para cualquier dispositivo." },
  { icon: "globe", title: "Soluciones en la Nube", description: "Implementamos infraestructura en la nube segura y escalable para optimizar el rendimiento y reducir costos, permitiéndote operar sin limitaciones." },
  { icon: "cpu", title: "Inteligencia artificial y aprendizaje automático", description: "Implementar soluciones inteligentes que analicen datos, aprendan patrones y realicen predicciones para brindarle a su empresa una ventaja competitiva en el panorama digital.." }
];
---

<section id="Servicios" class="w-full bg-gray-900 py-12 md:py-12 lg:py-12 ">
  <div class="container mx-auto px-4 md:px-6">
    <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl text-white text-center mb-12"><span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-700 to-blue-400">Nuestros</span> Servicios</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service) => (
        <div class="flex flex-col p-6 space-y-4 bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow">
          <svg xmlns="http://www.w3.org/2000/svg " width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-12 w-12 text-green-500">
            {service.icon === "laptop" && (
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
              <line x1="2" y1="20" x2="22" y2="20"></line>
            )}
             {service.icon === "camera" && (
             <>
               <rect x="3" y="5" width="18" height="14" rx="2" ry="2"></rect>
               <circle cx="12" cy="12" r="3"></circle>
               <path d="M8 5l2-2h4l2 2"></path>
             </>
           )}
           {service.icon === "megaphone" && (
              <>
                <path d="M3 11v2"></path>
                <path d="M12 5v14"></path>
                <path d="M15 7h4a2 2 0 0 1 2 2v6a2 2 0 0 1-2 2h-4l-6 3V4l6 3z"></path>
              </>
            )}
            {service.icon === "smartphone" && (
              <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
              <line x1="12" y1="18" x2="12" y2="18"></line>
            )}
            {service.icon === "globe" && (
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="2" y1="12" x2="22" y2="12"></line>
              <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
            )}
            {service.icon === "cpu" && (
              <rect x="4" y="4" width="16" height="16" rx="2" ry="2"></rect>
              <rect x="9" y="9" width="6" height="6"></rect>
              <line x1="9" y1="1" x2="9" y2="4"></line>
              <line x1="15" y1="1" x2="15" y2="4"></line>
              <line x1="9" y1="20" x2="9" y2="23"></line>
              <line x1="15" y1="20" x2="15" y2="23"></line>
              <line x1="20" y1="9" x2="23" y2="9"></line>
              <line x1="20" y1="14" x2="23" y2="14"></line>
              <line x1="1" y1="9" x2="4" y2="9"></line>
              <line x1="1" y1="14" x2="4" y2="14"></line>
            )}
          </svg>
          <h3 class="text-xl font-bold text-white">{service.title}</h3>
          <p class="text-gray-500">{service.description}</p>
          <a href="/Servicios" class="text-blue-500 hover:underline font-medium inline-flex items-center">
            Saber más
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-1 h-4 w-4">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

