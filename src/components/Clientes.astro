---
import { Image } from "astro:assets";

import Client1 from "../assets/Blog/Blog1.png";
import Client2 from "../assets/Blog/Blog1.png";
import Client3 from "../assets/Blog/Blog1.png";
import Client4 from "../assets/Blog/Blog1.png";
import Client5 from "../assets/Blog/Blog1.png";
import Client6 from "../assets/Blog/Blog1.png";

const clientLogos = [Client1, Client2, Client3, Client4, Client5, Client6];
---

<section id="clients" class="w-full py-12 md:py-12 lg:py-12 bg-gray-900">
  <div class="container mx-auto px-4 md:px-6">
    <div class="text-center mb-12">
      <div class="inline-block rounded-lg bg-blue-100 px-3 py-1 text-sm text-blue-600 mb-4">
        Nuestros Clientes
      </div>
      <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl text-white">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-700 to-blue-400">
          Nuestros
        </span> Clientes y Colaboradores
      </h2>
      <p class="mx-auto max-w-[700px] text-gray-300 md:text-xl mt-4">
        Colaboramos con empresas de todos los tamaños en retail, logística, tecnología y más, brindando software de alto impacto.
      </p>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-8 items-center justify-items-center">
      {clientLogos.map((logo, index) => (
        <div class="grayscale hover:grayscale-0 transition-all duration-300">
          <Image src={logo} alt={`Client logo ${index + 1}`} width={120} height={60} class="object-contain" />
        </div>
      ))}
    </div>
  </div>
</section>
