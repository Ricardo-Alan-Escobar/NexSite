---
import { Image } from "astro:assets";
import Proventis from "../assets/Proyectos/Proventis.png";
import Maquirsa from "../assets/Proyectos/Maquirsa.png";
import Massey from "../assets/Proyectos/masseyapp.jpeg";
import Vsilva from "../assets/Proyectos/vsilva.png";
import Neuuni from "../assets/Proyectos/neuuni.png";
import Tarjeta from "../assets/Proyectos/Tarjeta.png";

const projects = [
{ title: "Maquirsa", description: "Desarrollo de pagina para constructora con diversos servicios a nivel nacional.", image: Maquirsa, href: "https://grupomaquirsa.netlify.app" },
{ title: "Tarjeta Digital", description: "Tarjeta interactiva de presentacion que facilita el contacto en un solo click, ademas de proporcionar informacion directa.", image: Tarjeta, href: "https://tarjetadigitalsandra.netlify.app" },
{ title: "Vsilva", description: "Paguina para empresa de tecnologia enfocada a soluciones con redes e instalaciones.", image: Vsilva, href: "https://vsilva.netlify.app/" },
{ title: "Universidad Neuuni", description: "Pagina para alumnos de una universidad dedicada a clases en linea, donde contiene documentacion del uso de la plataforma.", image: Neuuni, href: "https://docs.neuunieverest.com" },
{ title: "Social Media 'Proventis'", description: "Aplicacion sosial para empresas con seguimiento de ticketsy capacitacion continua ademas del seguimiento de permisos.", image: Proventis, href: "https://github.com/Ricardo-Alan-Escobar/Proventis" },
{ title: "Sistema gestor de facturas", description: "Aplicacion que convierte archivos xml en masa a archivo Xsl; filtra y hace el conteo de facturas catalogandolas por su CFDI.", image: Massey, href: "https://github.com/Ricardo-Alan-Escobar/GrupoMaquirsa" },
];
---

<section id="Trabajos" class="w-full bg-gray-900 py-16 md:py-16 lg:py-16 ">
  <div class="container mx-auto px-4 md:px-6">
    <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl text-center mb-12 text-white">Nuestros <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-700 to-blue-400">proyectos</span></h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3  gap-6">
      {projects.map((project) => (
        <div class="flex bg-gray-800 flex-col items-center text-center p-6 space-y-4 border rounded-lg shadow-sm hover:shadow-md transition-shadow">
          <Image src={project.image || "/placeholder.svg"} alt={project.title} class="object-cover w-full h-full" />
          <h3 class="text-xl font-bold text-white">{project.title}</h3>
          <p class="text-gray-300">{project.description}</p>
          <a href={project.href} class="inline-flex text-white items-center justify-center rounded-md bg-blue-600 px-4 py-2 text-sm font-medium  hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            Ver Demo
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
